@model Ejab.BAL.ModelViews.TruckTypeViewModel


<div id="page-wrapper" class="gray-bg dashbard-1">

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>@Resources.Global.TruckType  </h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/Home/Admin/">@Resources.Global.Home   </a>
                </li>
                <li>
                    @Resources.Global.TruckType
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5> @Resources.Global.TruckType  </h5>

                            </div>
                            @using (Html.BeginForm("AddType", "TruckType", FormMethod.Post))
            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Name</label>

                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Name, "*")
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary demo3" />
                                </div>
                            }
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/_Footer.cshtml")
</div>