@using PagedList;
@using PagedList.Mvc;
@model  IPagedList<Ejab.BAL.ModelViews.Notification.NotificationViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper" class="gray-bg dashbard-1">

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-8">
            <h2>@Resources.Global.Notification</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/Chart/Index/">@Resources.Global.Home </a>
                </li>
                <li>
                    @Resources.Global.AddNoty
                </li>
            </ol>
        </div>
        <div class="col-sm-4 text-left">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">

                            <div class="ibox-content">
                                <div class="panel blank-panel">

                                    <div class="panel-heading">

                                        <div class="panel-options">

                                            <ul class="nav nav-tabs navs">
                                                <li class="active jobss"><a data-toggle="tab" href="#tab-1" aria-expanded="true"> @Resources.Global.Notification </a></li>
                                                <li class="jobss"><a data-toggle="tab" href="#tab-2" aria-expanded="false"> @Resources.Global.AddNoty</a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="panel-body">

                                        <div class="tab-content">
                                            <div id="tab-1" class="tab-pane active">

                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <div class="form-group jobss">
                                                            <h5>
                                                               @Resources.Global.NotyCounts
                                                                <span>
                                                                    @ViewBag.TotalCount
                                                                </span>
                                                            </h5>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">

                                                    </div>
                                                    <div class="col-sm-6 text-left">
                                                        <div class="form-group">

                                                            @using (Html.BeginForm("Index", "Notify", FormMethod.Get))
                                                            {

                                                                <div class="input-group m-b">
                                                                    <input type="text" name="search" id="search" placeholder=@Resources.Global.Search class="form-control">
                                                                    <span class="input-group-btn">
                                                                        <button type="submit" class="btn btn-primary  ">@Resources.Global.Search</button>
                                                                    </span>  
                                                                    
                                                                </div>
                                                            }

                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="row">
                                                    <div class="table-responsive">


                                                        <table class="table table-striped">
                                                           
                                                            <thead>
                                                                <tr>
                                                                    <th>@Resources.Global.Date  </th>                                                                    
                                                                    <th>@Resources.Global.TitleArb   </th>
                                                                    @*<th>@Resources.Global.TitleEng   </th>*@
                                                                    <th>@Resources.Global.Body  </th>
                                                                    @*<th>@Resources.Global.BodyEng   </th>*@
                                                                    <th>@Resources.Global.SenderCode   </th>
                                                                  <th>@Resources.Global.Sender   </th>
                                                                    @*<th>@Resources.Global.ReciverCode   </th>*@
                                                                    @*<th>@Resources.Global.Reciver   </th>*@
                                                                    @*<th>@Resources.Global.ReciverCode   </th>
                                                                    <th>@Resources.Global.Reciver   </th>*@
                                                                    <th>@Resources.Global.Seen  </th>
                                                                   
                                                                    <th> </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>

                                                                @foreach (var item in Model)
                                                                {

                                                                    <tr>

                                                                        <td> @item.Date.Date.ToString("MM/dd/yyyy") </td>
                                                                       
                                                                        <td>@item.TitleArb   </td>
                                                                        @*<td>@item.TitleEng   </td>*@
                                                                       
                                                                        <td>@item.BodyArb    </td>
                                                                        @*<td>@item.BodyEng   </td>*@
                                                                        <td>@item.SenderId </td>
                                                                        <td>
                                                                       @item.SenderUser.FirstName  @item.SenderUser.FirstName
                                                                           

                                                                        </td>
                                                                        @*<td>@item.ReceiverId </td>*@
                                                                        @*<td>
                                                                            @item.ReciverUser .FirstName  @item.ReciverUser.FirstName


                                                                        </td>*@
                                                                        @*<td>@item.ReceiverId </td>
                                                                        <td>
                                                                            @item.ReciverUser.FirstName  @item.ReciverUser.FirstName
                                                                          
                                                                        </td>*@
                                                                        <td>
                                                                             
                                                                            @if (@item.Seen == true)
                                                                            {
                                                                                <button class="btn btn-info btn-circle changess" type="button" id="changeState" >
                                                                                    <i class="fa fa-check"></i>
                                                                                </button>

                                                                            }

                                                                            else
                                                                            {
                                                                                <button class="btn btn-warning btn-circle changess" type="button" id="changeState">
                                                                                    <i class="fa fa-times"></i>
                                                                                </button>

                                                                            }
                                                                        </td>
                                                                        
                                                                        @*<td>

                        @Html.ActionLink(@Resources.Global.Replay, "EditAdmin", "Customer", new { id = @item.MessageId }, new { @class = "btn btn-primary glyphicon glyphicon-envelope " })


                    </td>*@

                                                                    </tr>
                                                                }
                                                            </tbody>


                                                        </table>
                                                    </div>
                                                    <div class="col-sm-12 text-center">
                                                        <nav aria-label="Page navigation">
                                                            @Html.PagedListPager(Model, Page => Url.Action("Index", "Notify", new { Page, search = Request.QueryString["search"] }))
                                                        </nav>
                                                    </div>
                                                </div>

                                            </div>
                                            <!-- End tab1 -->
                                            <div id="tab-2" class="tab-pane">
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <div class="form-group jobss">
                                                            <h5>
                                                                @Resources.Global.AddNoty
                                                                <span>
                                                                </span>
                                                            </h5>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6">

                                                    </div>
                                                    <div class="col-sm-3 text-left">
                                                    </div>
                                                </div>

                                                <!--  -->
                                                <!--  -->
                                                <div class="row">

                                                    <div class="ibox-content">

                                                        @Html.Action("AddNoty", "Notify")
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <div class="footer text-center">
        <p>@Resources.Global.footer </p>
    </div>
</div>