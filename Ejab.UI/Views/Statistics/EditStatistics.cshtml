@model Ejab.BAL.ModelViews.Statictics.StaticticsViewModel

@{
    ViewBag.Title = "EditStatistics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-8">
            <h2>@Resources.Global.Statistics </h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/Chart/Index/">@Resources.Global.Home  </a>
                </li>
                <li>
                    @Resources.Global.Statistics
                </li>
            </ol>
        </div>
        <div class="col-sm-4 text-left">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">

                            <div class="ibox-content">
                                @using (Html.BeginForm("EditStatistics", "Statistics", FormMethod.Post))
            {

                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label class=" control-label">@Resources.Global.TrucksOffersNumber </label>

                                        @Html.TextBoxFor(x => x.TrucksOrdersNo, new { @class = "form-control", required = "required", @type = "number" })

                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">@Resources.Global.UsersVistors</label>

                                        @Html.TextBoxFor(x => x.CustomerNo, new { @class = "form-control", required = "required", @type = "number" })

                                    </div>
                                    <div class="form-group">
                                        <label class=" control-label">@Resources.Global.AvailableOffers</label>

                                        @Html.TextBoxFor(x => x.OfferNo, new { @class = "form-control", required = "required", @type = "number" })

                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">@Resources.Global.AppDownloadNumbers</label>

                                        @Html.TextBoxFor(x => x.AppDownloadsNo, new { @class = "form-control", required = "required", @type = "number" })

                                    </div>

                                    <div class="form-group">
                                        <div>
                                            <button class="btn btn-default buttt"  type="submit" id="btnSave">@Resources.Global.Save</button>
                                            @Html.ActionLink(@Resources.Global.Back, "Index", "Statistics", new { @class = "btn btn-default  buttt" })
                                        </div>
                                    </div>


                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <div class="footer text-center">
        <p>@Resources.Global.footer </p>
    </div>
</div>
