@model Ejab.BAL.ModelViews.TrucksViewModel

@{
    ViewBag.Title = "AddTruck";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper" class="gray-bg dashbard-1">

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content">
                    <div class="form-group">
                        @using (Html.BeginForm("AddTruck", "Truck", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()


                            <div class="col col-sm-12 ">
                                <div class="form-group ">
                                    <label class="col-lg-2 control-label">First name</label>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Name, "*")
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Weight</label>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(x => x.Weight, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(x => x.Weight, "*")
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label class="col-lg-2 control-label">Height</label>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(x => x.Height, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Height, "*")
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Wedith </label>
                                    <div class="col-lg-8">
                                        @Html.TextBoxFor(x => x.Width, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Width, "*")
                                    </div>
                                </div>


                                <div class="form-group ">
                                    <label class="col-lg-2 control-label">Truck icon</label>
                                    <div class="col-lg-8">
                                        <input type="file" name="file" class="form-control" id="Icon" onchange="ImagePreview(this);" />
                                        <img alt="IconPreview" id="ImgPreview" class="pull-right " />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-4">
                                        <button type="submit" class="btn btn-w-m btn-success  ">Save</button>
                                    </div>
                                </div>

                            </div>

                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>








