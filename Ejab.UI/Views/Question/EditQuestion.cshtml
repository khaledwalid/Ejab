@model Ejab.BAL.ModelViews.CommonQuestions.Commonquestionsviewmodel

@{
    ViewBag.Title = "EditQuestion";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-8">
            <h2>@Resources.Global.Questions</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/Chart/Index/">@Resources.Global.Home  </a>
                </li>
                <li>
                    @Resources.Global.Questions
                </li>
            </ol>
        </div>
        <div class="col-sm-4 text-left">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">

                            <div class="ibox-content">

                               @using (Html.BeginForm("EditQuestion", "Question", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="form-group">
                                    <label class="col-lg-2 control-label">@Resources.Global.QuestionArabic </label>

                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(x => x.QuestionArb, new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(x => x.QuestionArb)

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">@Resources.Global.AnswerArabic </label>

                                    <div class="col-lg-7">
                                        @Html.TextAreaFor(x => x.AnswerArb, new { @class = "form-control", rows = "6", cols = "10", required = "required" })
                                        @Html.ValidationMessageFor(x => x.AnswerArb)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">@Resources.Global.QuestionEnglish</label>

                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(x => x.QuestionEng, new { @class = "form-control", required = "required" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">@Resources.Global.AnswerEnglish </label>

                                    <div class="col-lg-7">
                                        @Html.TextAreaFor(x => x.AnswerEng, new { @class = "form-control", rows = "6", cols = "10", required = "required" })
                                    </div>

                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-primary buttt" type="submit" id="btnSave">@Resources.Global.Save </button>
                                        @Html.ActionLink(@Resources.Global.Back, "Index", "Question", new { @class = "btn btn - default  buttt" })
                                    </div>
                                </div>


                               }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <div class="footer text-center">
        <p>@Resources.Global.footer  </p>
    </div>
</div>




















