@model Ejab.BAL.ModelViews.RuleViewModel

@using (Html.BeginForm("AddRule", "Rule", FormMethod.Post))
            {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-lg-2 control-label">@Resources.Global.RuleName </label>

        <div class="col-lg-6">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">@Resources.Global.RuleDescription</label>

            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">@Resources.Global.RulDescriptionEng </label>

            <div class="col-lg-6">
                @Html.TextBoxFor(x => x.DescriptionEng, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.DescriptionEng)
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary demo3" />
        </div>
}


