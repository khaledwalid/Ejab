@model  IEnumerable<Ejab.BAL.ModelViews.Reports.TruckDTO>
@{
    ViewBag.Title = "DownloadTrucksViewPDF";
   // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    table {
        overflow: visible !important;
    }

    thead {
        display: table-header-group;
    }

    tfoot {
        display: table-row-group;
    }

    tr {
        page-break-inside: avoid;
    }
</style>
@*<h2 style="text-align:center">@Resources.Global.Trucks</h2>*@
<!doctype html>
        <table class="table table-striped" style="table-layout: fixed; width: 100%">
            <thead>
                <tr>
                    <th>@Resources.Global.TruckNameArb  </th>

                    <th>@Resources.Global.TruckNameEng   </th>

                    <th>@Resources.Global.TruckIcon  </th>

                    <th>@Resources.Global.TruckParentNameArb</th>
                    <th>@Resources.Global.TruckParentNameEng</th>
                    <th>@Resources.Global.TruckIcon</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                 
                            <tr>
                                <td>
                                    @item.TruckNameArb
                                </td>
                                <td>@item.TruckNameEng   </td>

                                <td>
                                    <img src=@item.ImagePath style="width:60px" />

                                </td>
                                <td>
                                    @item.TruckParentNameArb

                                </td>
                                <td>
                                    @item.TruckParentNameEng

                                </td>
                                <td>
                                    <img src=@item.ParentImagePath style="width:60px" />

                                </td>
                            </tr>
                    
                  


                }
            </tbody>

        </table>
  
