@model Ejab.BAL.ModelViews.UserViewModel

<div class="wrapper wrapper-content animated fadeInRight">


    <div class="row m-b-lg m-t-lg">
        <div class="col-md-6">

            <div class="profile-image">
                <img src="@Model.ProfileImgPath" class="img-circle circle-border m-b-md" alt="profile">

            </div>
            <div class="profile-info">
                <div class="">
                    <div>

                        <div class="form-group">
                            <label> First Name :</label>
                            @Html.DisplayTextFor(x => x.FirstName)
                        </div>
                        <div class="form-group">
                            <label> Last Name :</label>
                            @Html.DisplayTextFor(x => x.LastName)
                        </div>
                        <div class="form-group">
                            <label> Mobile :</label>
                            @Html.DisplayTextFor(x => x.Mobile)
                        </div>

                        <div>
                            <label> Email :</label>
                            @Html.DisplayTextFor(x => x.Email)
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


</div>